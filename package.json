{
  "name": "visualcode-site",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "format": "prettier --write .",
    "check:format": "prettier --check .",
    "test": "vitest",
    "audit": "npm audit --json",
    "audit:fix": "npm audit fix",
    "audit:fix:force": "npm audit fix --force",
    "ci:smoke": "npm ci && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^8.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^2.0.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "^20.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{md,json,css,html}": [
      "prettier --write"
    ]
  }
}
